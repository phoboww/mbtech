.container {
  background: #f5f1e6;  /* 米色背景 */
  min-height: 100vh;
  padding: 30rpx;
}

.cart-list {
  background: #fff8e7;  /* 浅米色背景 */
  border-radius: 12rpx;
  margin-bottom: 120rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(139, 115, 85, 0.1);
}

.item-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.item-name {
  flex: 1;
  color: #4a3728;  /* 深咖啡色 */
  font-size: 28rpx;
}

.item-controls {
  display: flex;
  align-items: center;
  margin: 0 40rpx;
}

.btn-decrease, .btn-increase {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #FFC0CB;  /* 芭比粉 */
  color: #4a3728;
  border-radius: 50%;
  font-size: 28rpx;
}

.item-count {
  margin: 0 20rpx;
  color: #4a3728;
  font-size: 28rpx;
  min-width: 40rpx;
  text-align: center;
}

.item-price {
  color: #4a3728;
  font-size: 28rpx;
  font-weight: bold;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff8e7;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(139, 115, 85, 0.1);
}

.total-price {
  color: #4a3728;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-submit {
  background: #FFC0CB;  /* 芭比粉 */
  color: #4a3728;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.empty-cart {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 