.container {
  padding: 30rpx;
  background: #f5f1e6;  /* 米色背景 */
}

.section-title {
  font-size: 32rpx;
  color: #4a3728;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.order-items {
  background: #fff8e7;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(139, 115, 85, 0.1);
}

.name {
  flex: 1;
  color: #4a3728;
}

.count {
  color: #8b7355;
  margin: 0 20rpx;
}

.price {
  color: #4a3728;
  font-weight: bold;
}

.total-section {
  background: #fff8e7;
  padding: 30rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.total-price {
  color: #4a3728;
  font-weight: bold;
  font-size: 36rpx;
}

.remark-section {
  background: #fff8e7;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 60rpx;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #4a3728;
  background: #fff;
  border-radius: 8rpx;
}

.btn-submit {
  background: #FFC0CB;  /* 芭比粉 */
  color: #4a3728;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
} 