.container {
  min-height: 100vh;
  background: #f8f3e9;
  padding: 30rpx;
}

.form-group {
  background: #fff8e7;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #4a3728;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f1e6;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #4a3728;
  border: 1rpx solid rgba(139, 115, 85, 0.1);
}

.image-upload {
  width: 100%;
  height: 300rpx;
  background: #f5f1e6;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  border: 1rpx solid rgba(139, 115, 85, 0.1);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-hint {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(139, 115, 85, 0.05);
  color: #8b7355;
  font-size: 28rpx;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  background: #FFC0CB;
  color: #4a3728;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
} 