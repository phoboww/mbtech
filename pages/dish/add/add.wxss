.container {
  min-height: 100vh;
  background: #f8f3e9;
  padding: 40rpx;
}

.form-group {
  background: #fff8e7;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 0 auto;
  width: 600rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
  position: relative;
  padding-left: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #4a3728;
  margin-bottom: 20rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-left: 0;
}

.input-wrapper {
  width: 442rpx;
  margin: 0;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f5f1e6;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #4a3728;
  border: 2rpx solid rgba(139, 115, 85, 0.1);
  transition: all 0.3s;
}

.input:focus {
  border-color: #FFC0CB;
  background: #fff;
}

.image-upload {
  width: 520rpx;
  height: 400rpx;
  background: #f5f1e6;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  border: 2rpx dashed rgba(139, 115, 85, 0.2);
  transition: all 0.3s;
  margin: 0;
}

.image-upload:active {
  opacity: 0.8;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-hint {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(139, 115, 85, 0.05);
  color: #8b7355;
}

.upload-hint:before {
  content: '+';
  font-size: 80rpx;
  line-height: 1;
  margin-bottom: 20rpx;
  color: #FFC0CB;
}

.upload-hint text {
  font-size: 28rpx;
  color: #8b7355;
}

.btn-submit {
  width: 520rpx;
  height: 88rpx;
  background: #FFC0CB;
  color: #4a3728;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  letter-spacing: 4rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 192, 203, 0.3);
  transition: all 0.3s;
  margin: 40rpx auto 0;
}

.btn-submit:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 192, 203, 0.2);
}

/* 添加价格符号 */
.price-input-wrapper:before {
  content: '¥';
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #8b7355;
  font-size: 30rpx;
}

.price-input-wrapper {
  width: 364rpx;
  margin: 0;
}

.price-input-wrapper .input {
  padding-left: 60rpx;
} 